{
  "name": "loxdown",
  "version": "0.1.0",
  "description": "A statically-typed variant of Lox, written in TypeScript",
  "main": "built/main.js",
  "scripts": {
    "build": "rm -r built/ && tsc",
    "build-playground": "npm run-script build && webpack && cp node_modules/codemirror/lib/codemirror.css web/css/",
    "lint": "eslint . --ext .js,.ts",
    "format": "eslint . --ext .js,.ts --fix",
    "test": "npm run-script build && jest",
    "generate-ast": "./src/tool/generateAst.ts src/"
  },
  "bin": {
    "loxdown": "src/main.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidtimms/loxdown.git"
  },
  "keywords": [
    "typescript",
    "lox",
    "loxdown",
    "crafting",
    "interpreters"
  ],
  "author": "David Timms",
  "license": "UNLICENSED",
  "homepage": "https://github.com/davidtimms/loxdown#readme",
  "devDependencies": {
    "@types/codemirror": "0.0.98",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.11.1",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "eslint": "^6.8.0",
    "jest": "^25.4.0",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "jest": {
    "roots": [
      "built/",
      "tests/"
    ]
  },
  "dependencies": {
    "codemirror": "^5.57.0"
  }
}
